<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaderboard_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leaderboard_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/header"
            android:paddingBottom="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"/>

        <TextView
            android:id="@+id/leaderboard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_padding"
            android:layout_toEndOf="@+id/leaderboard_rank"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/header" />

        <TextView
            android:id="@+id/leaderboard_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_rank"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/reading" />

        <TextView
            android:id="@+id/leaderboard_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/leaderboard_rank"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/reading" />

        <TextView
            android:id="@+id/leaderboard_avg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_total_text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/reading" />

        <TextView
            android:id="@+id/leaderboard_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/leaderboard_total_text"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/reading" />

        <TextView
            android:id="@+id/leaderboard_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_avg_text"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/reading"
            android:paddingTop="@dimen/content_padding"/>

        <TextView
            android:id="@+id/leaderboard_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_language_text"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text" />

    </RelativeLayout>
</LinearLayout>